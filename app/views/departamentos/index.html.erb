<div class="ui container">
<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table class="ui unstackable table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nombre %></td>
        <td><%= link_to 'Mostrar', departamento %></td>
        <td><%= link_to 'Editar', edit_departamento_path(departamento) %></td>
        <td><%= link_to 'Eliminar', departamento, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Departamento', new_departamento_path %>
</div>
