<p>Find me in app/views/verificacionusers/index.html.erb</p>



<div class="ui top attached tabular menu">
  <a class="item active" data-tab="first">Verificar ONG</a>
  <a class="item" data-tab="forth"> ONG activas</a>
  <a class="item" data-tab="second">Verificar Usuarios</a>
  <a class="item" data-tab="third">Usuarios activos</a>
</div>
<div class="ui bottom attached tab segment active" data-tab="first">
  <table class="ui celled table">
