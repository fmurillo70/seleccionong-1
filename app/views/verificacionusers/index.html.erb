    <tr>
      <th>Nombre</th>

      <th>RUT</th>
      <th>Camara y Comercio</th>
      <th>Documento de Identidad Representante</th>
      <th>Aprobar</th>
    </tr>
    </thead>
    <tbody>

    <% @ongverificar.each do |u| %>

        <tr>
          <td><%= u.nombres %></td>
          <td><a href="<%= u.rut.url %>" target="_blank">Link</a></td>
          <td><a href="<%= u.camaracomercio.url %>" target="_blank">Link</a></td>
          <td><a href="<%= u.docidentidad.url %>" target="_blank"></a>Link</td>

          <td>
            <form action="/home/aprobacion/" method="post">
              <input type="hidden" name="id" value="<%= u.id %>">
              <input type="hidden" name="user[aprobado]" value="<%= true %>">
              <button class="ui button">Aprobar</button>
            </form>
          </td>


        </tr>
    <% end %>
    </tbody>
  </table>
</div>
