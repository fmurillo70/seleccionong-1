<div class="ui container">

<p id="notice"><%= notice %></p>

<h1>Ciudades o Municipios</h1>

<table class="ui unstackable table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Departamento</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @municipios.each do |municipio| %>
      <tr>
        <td><%= municipio.nombre %></td>
        <td><%= municipio.departamento.nombre %></td>
        <td><%= link_to 'Mostrar', municipio %></td>
        <td><%= link_to 'Editar', edit_municipio_path(municipio) %></td>
        <td><%= link_to 'Eliminar', municipio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

<%= link_to 'Nueva ciudad', new_municipio_path %>
