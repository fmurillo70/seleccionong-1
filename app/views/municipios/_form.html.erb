<div class="ui container">
  <%= form_for(municipio, html: {class: "ui form"}) do |f| %>
      <% if municipio.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(municipio.errors.count, "error") %> prohibited this municipio from being saved:</h2>

            <ul>
              <% municipio.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


      <div class="field">
        <%= f.label :nombre %>
        <%= f.text_field :nombre %>
      </div>

      <div class="field">
        <%= f.label :departamento %><br/>
        <%= f.select :departamento_id, options_for_select(Departamento.all.map { |s| [s.nombre, s.id] }) %>
      </div>

      <div class="actions">
        <%= f.submit "Crear Municipio" , class:"ui primary button btnLogin" %>
      </div>
  <% end %>

</div>