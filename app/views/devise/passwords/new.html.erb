<div class="ui container" style="margin-top: 80px;">
  <h2 style="text-align: center;color: #0d0b43;">Olvidaste tu clave?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "ui form"}) do |f| %>
      <div class="ui centered grid">

        <div class="row">
          <div class="column six wide">

            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :correo_electronico, class: "labels" %>
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="column six wide">
            <%= f.submit "Recuperar clave", class: "ui primary button btnLogin" %>
          </div>
        </div>

        <div class="row">
          <div class="column three wide">


            <div class="field">
              <%= link_to new_session_path(resource_name), style:"display:block;width:100%"  do %>
                  <button class="ui primary button btnNuevoONG">Iniciar Sesion</button>
              <% end -%>

            </div>
          </div>

          <div class="column three wide">
            <div class="field">
              <%= link_to new_registration_path(resource_name) do %>
                  <button class="ui primary button btnNuevoVol">Registrarse</button>
              <% end %>
            </div>
          </div>
        </div>


      </div>
  <% end %>



  <!--
  <%= render "devise/shared/links" %>
  -->
</div>
</div>


<style>
  .labels {
    text-align: left;
  }
</style>