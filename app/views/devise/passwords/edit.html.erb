<div class="ui container" style="margin-top: 80px;">
  <h2 style="text-align: center;color: #0d0b43;">Cambia tu clave</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: "ui form"}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="ui centered grid">

        <div class="row">
          <div class="column six wide">
            <div class="field">
              <%= f.label :password, "Nueva clave", class: "labels" %>
              <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="column six wide">

            <div class="field">
              <%= f.label :password_confirmation, "Confirma la nueva clave" %>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="column six wide">
            <%= f.submit "Cambiar mi clave", class: "ui primary button btnLogin" %>
          </div>
        </div>
      </div>
  <% end %>

</div>
